@page
@model WebRazor.Pages.Admin.Product.CreateProductModel

@{
    ViewData["PageTitle"] = "Create Product";
}

<div class="path-admin">CREATE A NEW PRODUCT</div>
<div class="content-main">
    <form method="post" id="content-main-product">
        <div class="content-main-1">
            
            <label asp-for="Product.ProductName"></label><br />
            <input asp-for="Product.ProductName" /><br />
            <span class="msg-error" asp-validation-for="Product.ProductName"></span><br />

            <label asp-for="Product.UnitPrice"></label><br />
            <input asp-for="Product.UnitPrice" /><br />
            <span class="msg-error" asp-validation-for="Product.UnitPrice"></span><br />

            <label asp-for="Product.QuantityPerUnit"></label><br />
            <input asp-for="Product.QuantityPerUnit" /><br />
            <span class="msg-error" asp-validation-for="Product.QuantityPerUnit"></span><br />

            <label asp-for="Product.UnitsInStock"></label><br />
            <input asp-for="Product.UnitsInStock" /><br />
            <span class="msg-error" asp-validation-for="Product.UnitsInStock"></span><br />
        </div>
        <div class="content-main-1">
            <label asp-for="Product.CategoryId"></label><br />
            <select asp-for="Product.CategoryId" asp-items="ViewBag.CategoryId"></select><br />

            <label asp-for="Product.ReorderLevel"></label><br />
            <input asp-for="Product.ReorderLevel" type="text" disabled><br />
            <span class="msg-error" asp-validation-for="Product.ReorderLevel"></span><br />

            <label asp-for="Product.UnitsOnOrder"></label><br />
            <input asp-for="Product.UnitsOnOrder" type="text" disabled><br />
            <span class="msg-error" asp-validation-for="Product.UnitsOnOrder"></span><br />


            <input class="form-check-input" asp-for="Product.Discontinued" /> @Html.DisplayNameFor(model => model.Product.Discontinued)<br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <div class="msg-error">@ViewData["msg"]</div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
